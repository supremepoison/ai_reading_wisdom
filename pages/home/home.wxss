/* pages/home/home.wxss */

/* 统计卡片 */
.stats-card {
  padding: 36rpx 40rpx;
}

.flame-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #FFF4E6 0%, #FFECD2 100%);
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.icon-md {
  width: 52rpx;
  height: 52rpx;
}

.icon-sm {
  width: 40rpx;
  height: 40rpx;
}

.streak-info {
  display: flex;
  flex-direction: column;
}

.streak-value {
  display: flex;
  align-items: baseline;
}

.points-badge {
  background: linear-gradient(135deg, #FFFEF0 0%, #FFF9C4 100%);
  padding: 16rpx 28rpx;
  border-radius: 28rpx;
  border: 4rpx solid #FFF3B0;
}

.points-text {
  font-size: 36rpx;
  font-weight: 800;
  color: var(--color-text);
  margin-left: 12rpx;
}

/* 任务区域 */
.section-header {
  padding: 20rpx 8rpx;
  margin-bottom: 16rpx;
}

.chapter-badge {
  background-color: #EBF4FF;
  padding: 10rpx 20rpx;
  border-radius: 16rpx;
}

.chapter-badge text {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--color-blue);
}

.mission-card {
  background: linear-gradient(135deg, #FFD93D 0%, #FFC107 100%);
  border-radius: 50rpx;
  padding: 48rpx;
  margin-bottom: 30rpx;
  position: relative;
  overflow: hidden;
  border: 8rpx solid #FFFFFF;
}

.mission-bg-circle {
  position: absolute;
  top: -80rpx;
  right: -80rpx;
  width: 320rpx;
  height: 320rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  filter: blur(40rpx);
}

.mission-content {
  position: relative;
  z-index: 1;
}

.book-cover {
  width: 180rpx;
  height: 240rpx;
  border-radius: 32rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  transform: rotate(-3deg);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  margin-right: 32rpx;
}

.book-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.book-title {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--color-text);
  margin-bottom: 8rpx;
}

.book-author {
  font-size: 28rpx;
  font-weight: 700;
  opacity: 0.7;
  margin-bottom: 24rpx;
}

.progress-bar {
  height: 12rpx;
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 12rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #FFFFFF;
  border-radius: 12rpx;
}

.progress-text {
  font-size: 24rpx;
  font-weight: 700;
  opacity: 0.8;
  text-align: right;
  margin-top: 8rpx;
}

.chapter-panel {
  margin-top: 40rpx;
  background-color: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10px);
  border-radius: 32rpx;
  padding: 32rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  position: relative;
  z-index: 1;
}

.chapter-title {
  font-size: 28rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}


/* Action Buttons Grid */
.action-buttons-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-top: 32rpx;
}

.checkin-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.4);
  border-radius: 24rpx;
  padding: 20rpx 10rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  transition: all 0.2s;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.checkin-btn:active {
  transform: scale(0.95);
  background-color: rgba(255, 255, 255, 0.6);
}

.quick-btn { }
.photo-btn { }
.voice-btn { }

.btn-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: 4rpx;
}

.btn-points {
  font-size: 20rpx;
  color: #E65100;
  background-color: #FFE0B2;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-weight: 800;
}

.completed-msg {
  background-color: rgba(255, 255, 255, 0.6);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  border: 4rpx solid #FFFFFF;
}

.completed-msg text {
  font-weight: 700;
  color: #2E7D32;
  font-size: 30rpx;
}

/* Recording Overlay */
.recording-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.recording-box {
  background-color: #FFFFFF;
  width: 300rpx;
  height: 300rpx;
  border-radius: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 32rpx;
  transition: all 0.2s;
}

.cancel-style {
  background-color: #FFEBEE;
  border: 4rpx solid #EF5350;
}

.cancel-icon {
  font-size: 80rpx;
}

.recording-text {
  font-size: 24rpx;
  color: #666;
  padding: 0 20rpx;
  text-align: center;
}

.cancel-style .recording-text {
  color: #D32F2F;
  font-weight: bold;
}

.recording-wave {
  width: 100rpx;
  height: 100rpx;
  background-color: var(--color-orange);
  border-radius: 50%;
  animation: wave 1s infinite ease-in-out;
}

@keyframes wave {
  0% { transform: scale(0.8); opacity: 0.5; }
  50% { transform: scale(1.2); opacity: 1; }
  100% { transform: scale(0.8); opacity: 0.5; }
}

.completed-badge {
  background-color: rgba(255, 255, 255, 0.5);
  padding: 24rpx;
  border-radius: 24rpx;
  gap: 16rpx;
  border: 4rpx solid #FFFFFF;
}

.completed-badge text {
  font-weight: 800;
  font-size: 30rpx;
}

/* 日历 */
.calendar-card {
  padding: 48rpx;
}

.calendar-header {
  margin-bottom: 32rpx;
}

.month-display {
  font-size: 28rpx;
  font-weight: 700;
  color: #888;
}

.weekday-header {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 16rpx;
  margin-bottom: 16rpx;
  text-align: center;
}

.weekday-header text {
  font-size: 22rpx;
  color: #AAA;
  font-weight: 700;
}

 .calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 16rpx;
}

.calendar-day.empty {
  background-color: transparent;
  pointer-events: none;
}

.calendar-day {
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 700;
  transition: all 0.2s;
}

.calendar-day.checked {
  background-color: var(--color-yellow);
  color: var(--color-text);
  box-shadow: 0 4rpx 8rpx rgba(255, 217, 61, 0.3);
  transform: rotate(2deg);
}

.calendar-day.today {
  background-color: #FFFFFF;
  color: var(--color-orange);
  border: 4rpx dashed var(--color-orange);
}

.calendar-day.future {
  background-color: #F5F5F5;
  color: #D0D0D0;
}

/* 成功动画弹窗 */
.success-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
  pointer-events: none;
}

.success-modal {
  background-color: #FFFFFF;
  padding: 64rpx;
  border-radius: 60rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 8rpx solid var(--color-yellow);
}

.success-emoji {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.success-title {
  font-size: 56rpx;
  font-weight: 800;
  color: var(--color-text);
  margin-bottom: 16rpx;
}

.success-points {
  background-color: #FFF9C4;
  padding: 16rpx 32rpx;
  border-radius: 9999rpx;
}

.success-points text {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-yellow-dark);
}

/* 登录卡片 */
.login-prompt {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
  padding: 48rpx;
}

.login-card {
  width: 100%;
  max-width: 600rpx;
  padding: 64rpx 48rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(102, 126, 234, 0.3);
}

.login-emoji {
  display: block;
  font-size: 100rpx;
  margin-bottom: 32rpx;
}

.login-title {
  display: block;
  font-size: 40rpx;
  font-weight: 800;
  color: #FFFFFF;
  margin-bottom: 16rpx;
}

.login-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 48rpx;
  line-height: 1.6;
}

.login-btn {
  background-color: #FFFFFF;
  color: #667eea;
  font-size: 32rpx;
  font-weight: 700;
  padding: 24rpx 64rpx;
  border-radius: 16rpx;
  border: none;
  flex: 1;
  margin: 0 16rpx;
}

.login-btn::after {
  border: none;
}

.login-btn.primary {
  background-color: #667eea;
  color: #FFFFFF;
}

.login-btn.secondary {
  background-color: rgba(255, 255, 255, 0.3);
  color: #FFFFFF;
  border: 2rpx solid #FFFFFF;
}

.button-group {
  display: flex;
  gap: 16rpx;
  width: 100%;
}
/* 选书弹窗 */
.book-picker-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(10px);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.book-picker-container {
  background-color: #FFFFFF;
  width: 100%;
  max-height: 85vh;
  border-radius: 60rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0 40rpx 80rpx rgba(0, 0, 0, 0.2);
  border: 4rpx solid var(--color-yellow);
}

.picker-header {
  padding: 48rpx;
  text-align: center;
  border-bottom: 2rpx solid #F0F0F0;
}

.picker-title {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--color-text);
  display: block;
  margin-bottom: 12rpx;
}

.picker-subtitle {
  font-size: 26rpx;
  color: #888;
}

.book-shelf {
  flex: 1;
  padding: 24rpx 32rpx; /* Increased horizontal padding */
  box-sizing: border-box; /* Ensure padding doesn't affect total width */
  margin-bottom: 12rpx; /* Give some space before footer */
}

.recommend-book-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  background-color: #FAFAFA;
  border-radius: 32rpx;
  margin-bottom: 32rpx; /* Increased bottom margin for shadow space */
  transition: all 0.2s;
  border: 2rpx solid #F0F0F0;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05); /* Added slight shadow to the card itself */
}

.recommend-book-item:active {
  transform: scale(0.98);
  background-color: #F8F8F8;
}

.recommend-cover {
  width: 110rpx;
  height: 154rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  background-color: #EFEFEF; /* placeholder color */
}

.recommend-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.recommend-title {
  font-size: 32rpx;
  font-weight: 800;
  margin-bottom: 8rpx;
  color: #333333;
}

.recommend-author {
  font-size: 24rpx;
  color: #888888;
  margin-bottom: 16rpx;
}

.level-tag {
  font-size: 20rpx;
  background-color: #FFF9C4;
  color: #F57F17;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  align-self: flex-start;
  font-weight: 700;
}

.select-btn {
  background: linear-gradient(135deg, #FFD93D 0%, #FFC107 100%);
  color: #5D4037;
  font-size: 26rpx;
  font-weight: 800;
  padding: 16rpx 40rpx;
  border-radius: 999rpx;
  box-shadow: 0 6rpx 12rpx rgba(255, 193, 7, 0.3);
  margin-left: 16rpx;
}

.picker-footer {
  padding: 40rpx;
  text-align: center;
  border-top: 2rpx solid #F0F0F0;
}

.picker-tip {
  font-size: 24rpx;
  color: #AAA;
  font-style: italic;
}

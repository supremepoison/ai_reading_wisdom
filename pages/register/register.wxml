<!--pages/register/register.wxml-->
<view class="container">
  <view class="register-header">
    <text class="title">智慧之匙 - 开启智慧</text>
    <text class="subtitle">请完善您的个人信息，开启AI悦读之旅</text>
  </view>

  <view class="form-container card">
    <view class="form-item">
      <text class="label">姓名</text>
      <input class="input" placeholder="请输入真实姓名" model:value="{{name}}" />
    </view>

    <view class="form-item">
      <text class="label">手机号码</text>
      <input class="input" type="number" placeholder="用于课后练习通知" model:value="{{phone}}" maxlength="11" />
    </view>

    <view class="form-item">
      <text class="label">读书等级</text>
      <picker bindchange="bindLevelChange" value="{{levelIndex}}" range="{{levels}}">
        <view class="picker-inner">
          <text>{{levels[levelIndex] || '请选择等级'}}</text>
          <text class="picker-arrow">▼</text>
        </view>
      </picker>
    </view>

    <view class="form-item">
      <text class="label">所属校区</text>
      <picker bindchange="bindCampusChange" value="{{campusIndex}}" range="{{campuses}}">
        <view class="picker-inner">
          <text>{{campusIndex >= 0 ? campuses[campusIndex] : '请选择校区'}}</text>
          <text class="picker-arrow">▼</text>
        </view>
      </picker>
    </view>

    <button class="submit-btn" bindtap="submitRegistration">立即注册</button>
  </view>

  <view class="footer">
    <text>注册即代表同意《智慧之匙服务协议》</text>
  </view>
</view>

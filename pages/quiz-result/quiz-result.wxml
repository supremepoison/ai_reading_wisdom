<view class="result-container">
  <!-- 顶部勋章区 -->
  <view class="header-section">
    <view class="badge-outer animate-pop">
      <text class="trophy-emoji">{{score >= 60 ? '🏆' : '🥉'}}</text>
    </view>
    <view class="points-badge">
      <text class="points-plus">+</text>
      <text class="points-val">{{pointsEarned}}</text>
      <text class="points-unit">积分</text>
    </view>
  </view>

  <!-- 结果详情卡片 -->
  <view class="result-card animate-float">
    <view class="status-indicator {{score >= 60 ? 'success' : 'retry'}}">
      <text>{{score >= 60 ? '挑战成功' : '还需努力'}}</text>
    </view>

    <view class="congrats-title">
      <text wx:if="{{score >= 100}}">完美通关！</text>
      <text wx:elif="{{score >= 60}}">太棒了！</text>
      <text wx:else>继续加油哦</text>
    </view>
    
    <view class="book-info">
      你在《{{bookTitle}}》的闯关中
    </view>

    <view class="stats-grid">
      <view class="stat-box">
        <text class="stat-num">{{correctCount}}</text>
        <text class="stat-desc">答对题目</text>
      </view>
      <view class="stat-divider"></view>
      <view class="stat-box">
        <text class="stat-num">{{totalQuestions}}</text>
        <text class="stat-desc">题目总数</text>
      </view>
      <view class="stat-divider"></view>
      <view class="stat-box">
        <text class="stat-num primary">{{score}}</text>
        <text class="stat-desc">最终得分</text>
      </view>
    </view>
  </view>

  <!-- 操作按钮 -->
  <view class="action-section">
    <button class="btn-main" bindtap="goBack">返回阅读</button>
    <button class="btn-sub" bindtap="goHome">回到首页</button>
  </view>
</view>

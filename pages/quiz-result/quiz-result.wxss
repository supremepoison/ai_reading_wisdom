/* quiz-result.wxss */
.result-container {
  min-height: 100vh;
  background-color: #FFFDF5;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  box-sizing: border-box;
}

/* 顶部头部区域 */
.header-section {
  width: 100%;
  padding: 60rpx 0 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(180deg, #FFD93D 0%, #FFFDF5 100%);
  border-radius: 0 0 80rpx 80rpx;
  margin: -40rpx -40rpx 40rpx;
}

.badge-outer {
  width: 200rpx;
  height: 200rpx;
  background: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 32rpx rgba(255, 193, 7, 0.2);
  border: 8rpx solid #FFE58F;
  margin-bottom: 30rpx;
}

.trophy-emoji {
  font-size: 100rpx;
}

.points-badge {
  display: flex;
  align-items: baseline;
  background: rgba(74, 55, 40, 0.05);
  padding: 12rpx 40rpx;
  border-radius: 100rpx;
  border: 2rpx solid rgba(74, 55, 40, 0.1);
}

.points-plus {
  font-size: 32rpx;
  font-weight: 800;
  color: #FF8E5E;
  margin-right: 4rpx;
}

.points-val {
  font-size: 56rpx;
  font-weight: 900;
  color: #4A3728;
}

.points-unit {
  font-size: 24rpx;
  font-weight: 700;
  color: #9C8C74;
  margin-left: 8rpx;
}

/* 结果卡片 */
.result-card {
  width: 100%;
  background: #FFFFFF;
  border-radius: 48rpx;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  box-shadow: 0 8rpx 32rpx rgba(74, 55, 40, 0.05);
  border: 4rpx solid #F0E6D2;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.status-indicator {
  padding: 8rpx 32rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
  font-weight: 800;
  margin-bottom: 32rpx;
}

.status-indicator.success {
  background: #E6FFFA;
  color: #319795;
  border: 2rpx solid #B2F5EA;
}

.status-indicator.retry {
  background: #FFF5F5;
  color: #E53E3E;
  border: 2rpx solid #FED7D7;
}

.congrats-title {
  font-size: 52rpx;
  font-weight: 900;
  color: #4A3728;
  margin-bottom: 12rpx;
}

.book-info {
  font-size: 28rpx;
  color: #9C8C74;
  font-weight: 600;
  margin-bottom: 60rpx;
}

.stats-grid {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 40rpx 0;
  border-top: 2rpx solid #F0E6D2;
  border-bottom: 2rpx solid #F0E6D2;
}

.stat-box {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 48rpx;
  font-weight: 900;
  color: #4A3728;
  line-height: 1;
  margin-bottom: 12rpx;
}

.stat-num.primary {
  color: #6BCB77;
}

.stat-desc {
  font-size: 22rpx;
  color: #9C8C74;
  font-weight: 700;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #F0E6D2;
}

/* 按钮区域 */
.action-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.btn-main {
  width: 100% !important;
  background: #FFD93D;
  color: #4A3728;
  padding: 28rpx 0;
  border-radius: 100rpx;
  font-size: 32rpx;
  font-weight: 800;
  border: none;
  box-shadow: 0 8rpx 0 #E6C229;
}

.btn-main:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 0 #E6C229;
}

.btn-sub {
  width: 100% !important;
  background: #FFFFFF;
  color: #9C8C74;
  padding: 28rpx 0;
  border-radius: 100rpx;
  font-size: 30rpx;
  font-weight: 700;
  border: 4rpx solid #F0E6D2;
}

.btn-sub:active {
  background: #FDFBFA;
}

/* 简单的进入动画 */
.animate-pop {
  animation: pop 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.animate-float {
  animation: float 3s ease-in-out infinite;
}

@keyframes pop {
  0% { transform: scale(0); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

/* pages/admin/user-detail/user-detail.wxss */
.container {
  padding: 32rpx;
  background-color: var(--color-bg);
  min-height: 100vh;
}

.form-card {
  background-color: #FFFFFF;
  border-radius: 32rpx;
  padding: 8rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid var(--color-border);
  margin-bottom: 24rpx;
}

.form-group {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  border-bottom: 2rpx solid #F5F5F5;
}

.form-group:last-child {
  border-bottom: none;
}

.label {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--color-text);
  min-width: 120rpx;
}

.input {
  flex: 1;
  text-align: right;
  font-size: 30rpx;
  color: #333;
}

.picker-value {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.picker-value text:first-child {
  font-size: 30rpx;
  color: var(--color-yellow-dark);
  font-weight: 700;
}

.picker-arrow {
  font-size: 36rpx;
  color: #CCC;
}

/* 只读信息 */
.info-card {
  background-color: #FFFFFF;
  border-radius: 32rpx;
  padding: 8rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid var(--color-border);
  margin-bottom: 48rpx;
}

.info-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid #F5F5F5;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #999;
}

.info-value {
  font-size: 28rpx;
  color: #666;
  font-weight: 600;
}

/* 保存按钮 */
.save-btn {
  background-color: #E0E0E0;
  padding: 28rpx;
  border-radius: 999rpx;
  text-align: center;
  transition: all 0.3s;
}

.save-btn text {
  font-size: 32rpx;
  font-weight: 800;
  color: #999;
}

.save-btn.active {
  background: linear-gradient(135deg, #FFD93D 0%, #FFC107 100%);
  box-shadow: 0 8rpx 24rpx rgba(255, 193, 7, 0.3);
}

.save-btn.active text {
  color: var(--color-text);
}

.save-btn.active:active {
  transform: scale(0.97);
}

/* pages/profile/profile.wxss */

/* 用户头像区域 */
.profile-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
}

.avatar-container {
  width: 224rpx;
  height: 224rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FFD93D 0%, #FFC107 100%);
  padding: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 8rpx 8rpx 0 0 #F2E8C9;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 8rpx solid #FFFFFF;
}

.user-name {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--color-text);
  margin-bottom: 16rpx;
}

.user-badges {
  display: flex;
  gap: 16rpx;
}

.level-badge {
  background: linear-gradient(135deg, #4D96FF 0%, #3B82F6 100%);
  padding: 10rpx 24rpx;
  border-radius: 9999rpx;
  box-shadow: 0 4rpx 12rpx rgba(77, 150, 255, 0.3);
}

.level-badge text {
  font-size: 24rpx;
  font-weight: 800;
  color: #FFFFFF;
}

.id-badge {
  background-color: #FFF4E6;
  padding: 10rpx 24rpx;
  border-radius: 9999rpx;
}

.id-badge text {
  font-size: 24rpx;
  font-weight: 800;
  color: var(--color-orange);
}

/* 数据统计 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.stat-item {
  background-color: #FFFFFF;
  padding: 32rpx;
  border-radius: 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  border: 2rpx solid var(--color-border);
}

.stat-value {
  display: block;
  font-size: 48rpx;
  font-weight: 800;
  color: var(--color-text);
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  font-weight: 700;
  color: #9CA3AF;
}

/* 区块 */
.section {
  margin-bottom: 48rpx;
}

.section-header {
  display: flex;
  align-items: center;
  padding: 0 16rpx;
  margin-bottom: 24rpx;
}

.section-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 800;
  color: var(--color-text);
}

/* 勋章墙 */
.medal-wall {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 48rpx 24rpx;
  padding: 48rpx;
}

.medal-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.medal-icon {
  width: 128rpx;
  height: 128rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  margin-bottom: 16rpx;
  transition: all 0.3s;
}

.medal-achieved {
  background: linear-gradient(135deg, #FFF9C4 0%, #FFE082 100%);
  border: 4rpx solid #FBC02D;
  box-shadow: 0 8rpx 0 0 #FBC02D;
  transform: rotate(3deg);
}

.medal-locked {
  background-color: #F3F4F6;
  border: 4rpx solid #E5E7EB;
  filter: grayscale(100%);
  opacity: 0.6;
}

.medal-name {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--color-text);
  text-align: center;
}

.medal-name-locked {
  color: #D1D5DB;
}

/* 阅读档案 */
.reading-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.reading-item {
  display: flex;
  align-items: center;
  background-color: #FFFFFF;
  padding: 24rpx;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  border: 2rpx solid var(--color-border);
  transition: background-color 0.2s;
}

.reading-item:active {
  background-color: #FFF8E6;
}

.reading-cover {
  width: 112rpx;
  height: 160rpx;
  border-radius: 20rpx;
  background-color: #F3F4F6;
  border: 2rpx solid rgba(0, 0, 0, 0.05);
  margin-right: 28rpx;
}

.reading-info {
  flex: 1;
}

.reading-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: 16rpx;
}

.reading-tags {
  display: flex;
  gap: 16rpx;
}

.tag {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.tag text {
  font-size: 20rpx;
  font-weight: 700;
}

.tag-green {
  background-color: #D1FAE5;
}

.tag-green text {
  color: #059669;
}

.tag-blue {
  background-color: #DBEAFE;
}

.tag-blue text {
  color: #2563EB;
}

.reading-grade {
  font-size: 40rpx;
  font-weight: 800;
  font-style: italic;
  color: var(--color-yellow-dark);
  margin-right: 16rpx;
}

/* 登录卡片 */
.login-prompt {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
  padding: 48rpx;
}

.login-card {
  width: 100%;
  max-width: 600rpx;
  padding: 64rpx 48rpx;
  text-align: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(102, 126, 234, 0.3);
}

.login-emoji {
  display: block;
  font-size: 100rpx;
  margin-bottom: 32rpx;
}

.login-title {
  display: block;
  font-size: 40rpx;
  font-weight: 800;
  color: #FFFFFF;
  margin-bottom: 16rpx;
}

.login-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 48rpx;
  line-height: 1.6;
}

.login-btn {
  background-color: #FFFFFF;
  color: #667eea;
  font-size: 32rpx;
  font-weight: 700;
  padding: 24rpx 64rpx;
  border-radius: 16rpx;
  border: none;
}

.login-btn::after {
  border: none;
}
.tag-gray {
  background-color: #F3F4F6;
}

.tag-gray text {
  color: #6B7280;
}

.switch-book-btn {
  background: linear-gradient(135deg, #FFD93D 0%, #FFC107 100%);
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  box-shadow: 0 4rpx 10rpx rgba(255, 193, 7, 0.2);
  transition: all 0.2s;
}

.switch-book-btn:active {
  transform: scale(0.9) rotate(-2deg);
  box-shadow: 0 2rpx 4rpx rgba(255, 193, 7, 0.4);
}

.switch-book-btn text {
  font-size: 24rpx;
  font-weight: 800;
  color: var(--color-text);
}

.discover-btn {
  padding: 8rpx 20rpx;
  border: 4rpx solid var(--color-yellow);
  border-radius: 999rpx;
  transition: all 0.2s;
}

.discover-btn:active {
  background-color: var(--color-yellow);
  transform: translateY(2rpx);
}

.discover-btn text {
  font-size: 24rpx;
  font-weight: 800;
  color: var(--color-yellow-dark);
}

/* Utilities */
.flex { display: flex; }
.justify-between { justify-content: space-between; }
.items-center { align-items: center; }

/* 选书弹窗 */
.book-picker-overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(10px);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.book-picker-container {
  background-color: #FFFFFF;
  width: 100%;
  max-height: 80vh;
  border-radius: 48rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0 40rpx 80rpx rgba(0, 0, 0, 0.2);
  border: 4rpx solid var(--color-yellow);
  overflow: hidden;
}

.picker-header {
  padding: 40rpx;
  text-align: center;
  border-bottom: 2rpx solid #F0F0F0;
}

.picker-title {
  font-size: 40rpx;
  font-weight: 800;
  color: var(--color-text);
  display: block;
  margin-bottom: 8rpx;
}

.picker-subtitle {
  font-size: 24rpx;
  color: #999;
}

.book-shelf {
  flex: 1;
  padding: 20rpx;
  max-height: 50vh;
}

.recommend-book-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #FAFAFA;
  border-radius: 32rpx;
  margin-bottom: 20rpx;
}

.recommend-book-item:active {
  background-color: #F0F0F0;
}

.recommend-cover {
  width: 100rpx;
  height: 140rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.recommend-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.recommend-title {
  font-size: 30rpx;
  font-weight: 800;
  margin-bottom: 6rpx;
}

.recommend-author {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.level-tag {
  font-size: 20rpx;
  background-color: #FFF9C4;
  color: var(--color-yellow-dark);
  padding: 4rpx 14rpx;
  border-radius: 12rpx;
  align-self: flex-start;
  font-weight: 700;
}

.select-btn {
  background: linear-gradient(135deg, #FFD93D 0%, #FFC107 100%);
  color: var(--color-text);
  font-size: 26rpx;
  font-weight: 800;
  padding: 14rpx 28rpx;
  border-radius: 999rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 193, 7, 0.3);
  white-space: nowrap;
}

.picker-footer {
  padding: 24rpx 40rpx 40rpx;
  text-align: center;
  border-top: 2rpx solid #F0F0F0;
}

.close-picker-btn {
  padding: 16rpx;
}

.close-picker-btn text {
  font-size: 28rpx;
  color: #999;
  font-weight: 700;
}

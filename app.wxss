/**app.wxss - 全局样式**/

/* 微信小程序不支持 @import url() 导入外部字体，使用系统字体 */

/* CSS 变量定义 */
page {
  --color-bg: #FFFDF5;
  --color-yellow: #FFD93D;
  --color-yellow-dark: #E6C229;
  --color-orange: #FF8E5E;
  --color-blue: #4D96FF;
  --color-green: #6BCB77;
  --color-text: #4A3728;
  --color-text-light: #9C8C74;
  --color-card: #FFFFFF;
  --color-border: #F0E6D2;
  
  background-color: var(--color-bg);
  color: var(--color-text);
  font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 通用容器 */
.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  background-color: var(--color-card);
  border-radius: 40rpx;
  padding: 40rpx;
  box-shadow: 8rpx 8rpx 0 0 #F2E8C9;
  border: 4rpx solid var(--color-border);
  margin-bottom: 30rpx;
}

.card-yellow {
  background-color: var(--color-yellow);
  border-color: #FFFFFF;
}

/* 按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 40rpx;
  border-radius: 24rpx;
  font-weight: 800;
  font-size: 30rpx;
  transition: all 0.1s;
}

.btn-primary {
  background-color: var(--color-yellow);
  color: var(--color-text);
  box-shadow: 0 8rpx 0 0 var(--color-yellow-dark);
}

.btn-primary:active {
  transform: translateY(8rpx);
  box-shadow: 0 0 0 0 var(--color-yellow-dark);
}

.btn-secondary {
  background-color: var(--color-card);
  color: var(--color-text);
  border: 4rpx solid var(--color-border);
  box-shadow: 0 8rpx 0 0 #E5E7EB;
}

.btn-secondary:active {
  transform: translateY(8rpx);
  box-shadow: 0 0 0 0 #E5E7EB;
}

.btn-dark {
  background-color: var(--color-text);
  color: #FFFFFF;
  box-shadow: 0 8rpx 0 0 #2C2C2C;
}

.btn-dark:active {
  transform: translateY(8rpx);
  box-shadow: 0 0 0 0 #2C2C2C;
}

/* 文字样式 */
.text-title {
  font-size: 40rpx;
  font-weight: 800;
  color: var(--color-text);
}

.text-subtitle {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--color-text-light);
}

.text-body {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-text);
}

.text-small {
  font-size: 24rpx;
  font-weight: 700;
  color: var(--color-text-light);
}

/* Flex 工具类 */
.flex {
  display: flex;
}

.flex-row {
  flex-direction: row;
}

.flex-col {
  flex-direction: column;
}

.items-center {
  align-items: center;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

.space-x-2 > view + view,
.space-x-2 > text + text {
  margin-left: 16rpx;
}

.space-x-3 > view + view {
  margin-left: 24rpx;
}

.space-y-3 > view + view {
  margin-top: 24rpx;
}

.space-y-4 > view + view {
  margin-top: 32rpx;
}

/* 圆角工具类 */
.rounded-full {
  border-radius: 9999rpx;
}

.rounded-2xl {
  border-radius: 32rpx;
}

.rounded-3xl {
  border-radius: 48rpx;
}

/* 动画 */
@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-12rpx); }
}

@keyframes pop {
  0% { transform: scale(0.8); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.6; }
}

.animate-float {
  animation: float 3s ease-in-out infinite;
}

.animate-pop {
  animation: pop 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.animate-bounce {
  animation: bounce 1s infinite;
}

.animate-pulse {
  animation: pulse 2s infinite;
}

/* 隐藏滚动条 */
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

/* ========== 统一 登录/注册 引导组件 ========== */
.auth-gate {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 70vh;
  padding: 40rpx 20rpx;
}

.auth-gate-card {
  background: #FFFFFF;
  border-radius: 48rpx;
  padding: 64rpx 48rpx 56rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 100%;
  max-width: 620rpx;
  box-shadow: 8rpx 8rpx 0 0 #F2E8C9;
  border: 4rpx solid var(--color-border);
}

.auth-gate-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  animation: float 3s ease-in-out infinite;
}

.auth-gate-title {
  font-size: 44rpx;
  font-weight: 800;
  color: var(--color-text);
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.auth-gate-desc {
  font-size: 28rpx;
  color: var(--color-text-light);
  margin-bottom: 56rpx;
  line-height: 1.7;
  padding: 0 16rpx;
}

.auth-gate-buttons {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.auth-gate-btn {
  width: 100% !important;
  padding: 28rpx 0;
  border-radius: 99rpx;
  font-weight: 800;
  font-size: 32rpx;
  line-height: 1.4;
  border: none;
  transition: transform 0.1s;
}

.auth-gate-btn.primary {
  background: linear-gradient(135deg, var(--color-yellow), #FFCA28);
  color: var(--color-text);
  box-shadow: 0 8rpx 0 var(--color-yellow-dark);
}

.auth-gate-btn.primary::after {
  border: none;
}

.auth-gate-btn.primary:active {
  transform: translateY(8rpx);
  box-shadow: none;
}

.auth-gate-btn.secondary {
  background: var(--color-card);
  color: var(--color-text);
  border: 4rpx solid var(--color-border) !important;
  box-shadow: 0 8rpx 0 #E8DCC8;
}

.auth-gate-btn.secondary::after {
  border: none;
}

.auth-gate-btn.secondary:active {
  transform: translateY(8rpx);
  box-shadow: none;
}
